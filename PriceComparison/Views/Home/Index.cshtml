@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Core Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="Styles/Style.css" />
    <!-- Add any additional CSS files or styles here -->
</head>
<body>
    <div class="container">
        <h1>Welcome to My ASP.NET Core Application</h1>
        <p>This is a simple ASP.NET Core application using Bootstrap.</p>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Left column for cards -->
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-12 mb-4">
                        <div class="card h-100">
                            <img src="Resources/Images/pheonix.jpg" class="card-img-top img-fluid img-thumbnail" alt="pheonix logo">
                            <div class="card-body">
                                <h5 class="card-title" id="fxPrice">0 $</h5>
                                <a href="https://online.fnx.co.il/Travel/landing.html?fnx_ANum=rGM%200e3sjlk%3D&referrer=" class="btn btn-primary container">לרכישה</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-12 mb-4">
                        <div class="card h-100">
                            <img src="Resources/Images/Nmigdal.png" class="card-img-top img-fluid img-thumbnail" alt="migdal logo">
                            <div class="card-body">
                                <h5 class="card-title">0 $</h5>
                                <a href="https://travel.migdal.co.il/travel/index?id=1630" class="btn btn-primary container">לרכישה</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-12 mb-4">
                        <div class="card h-100">
                            <img src="Resources/Images/menora.png" class="card-img-top img-fluid img-thumbnail" alt="menora logo">
                            <div class="card-body">
                                <h5 class="card-title">0 $</h5>
                                <a href="https://www.menoramivt.co.il/top-travel/?token=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9..QMGm-Ql50vyEsHuUEXwsdxYzE8I3yHi3hG-T-n14ZaHaQuSzWjfBJkos-eG8xl3cB151zoVM6-R4KK2ZwhO4JA&t=Pq7FO_ve" class="btn btn-primary container">לרכישה</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-12 mb-4">
                        <div class="card h-100">
                            <img src="Resources/Images/harel.webp" class="card-img-top img-fluid img-thumbnail" alt="harel logo">
                            <div class="card-body">
                                <h5 class="card-title">0 $</h5>
                                <a href="https://digital.harel-group.co.il/travel-policy/?guid=533c4676-d81b-4701-a647-2e9f1ea8802d" class="btn btn-primary container">לרכישה</a>
                            </div>
                        </div>
                    </div>
                    <!-- Add more cards as needed -->
                </div>
            </div>

            <!-- Right column for number input, datalist, and form -->
            <div class="col-md-6">
                <!-- Row to align number input and datalist horizontally -->
                <div class="row align-items-end mb-3">
                    <div class="col-md-6">
                        <label for="numberInput" class="form-label">מספר ימים בחו"ל</label>
                        <div class="input-group">
                            <input type="number" class="form-control form-control-sm" id="numberInput" value="1" min="1">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="exampleDataList" class="form-label">לאן טסים</label>
                        <input class="form-control form-control-sm" list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
                        <datalist id="datalistOptions">
                            <option value="אירופה" selected>Europe</option>
                            <option value="ארצות הברית">United States</option>
                            <option value="קנדה">Canada</option>
                            <option value="אסיה">Asia</option>
                            <option value="מרכז אמריקה">Central America</option>
                            <option value="דרום אמריקה">South America</option>
                            <option value="אוסטרליה">Australia</option>
                            <option value="אפריקה">Africa</option>
                        </datalist>
                    </div>
                </div>

                <div class="text-end mb-3"> 
                    <button id="addFormButton" type="button" class="btn btn-primary">הוסף נוסע</button>
                </div>

                <!-- Container to hold multiple forms -->
                <div id="formsContainer">
                    <!-- Form -->
                    <div class="form-container" id="form">
                        <form>
                            <div class="mb-3">
                                <label for="age" class="form-label">גיל</label>
                                <input type="number"
                                       class="form-control"
                                       id="age"
                                       value="30" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label passenger-label">נוסע/ת 1</label>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-12">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox1"
                                               checked/>
                                        <label class="form-check-label" for="checkbox1">
                                            הוצאות רפואיות בחו"ל
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox2" />
                                        <label class="form-check-label" for="checkbox2">
                                            איתור וחילוץ
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox3" />
                                        <label class="form-check-label" for="checkbox3">
                                            ביטול/ קיצור נסיעה (כולל קורונה)
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox4" />
                                        <label class="form-check-label" for="checkbox4">
                                            כבודה
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox5" />
                                        <label class="form-check-label" for="checkbox5">
                                            טלפון סלולרי
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox6" />
                                        <label class="form-check-label" for="checkbox6">
                                            מחשב נייד/ טאבלט
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-12">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox7" />
                                        <label class="form-check-label" for="checkbox7">
                                            ספורט אתגרי
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox8" />
                                        <label class="form-check-label" for="checkbox8">
                                            ספורט חורף
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="checkbox9" />
                                        <label class="form-check-label" for="checkbox9">
                                            החמרת מצב רפואי קיים
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <div class="mt-3 text-end">
                            <button type="button" class="btn btn-warning">מחק</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    



    
  
    
    
    <!-- Bootstrap JavaScript libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Custom JavaScript file -->
    <script src="Scripts/script.js"></script>
    <script src="Scripts/carousel.js"></script>

</body>
</html>
